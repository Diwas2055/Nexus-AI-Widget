{
	"name": "nexus-ai-widget",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"build:css": "npx tailwindcss -i ./src/input.css -o ./public/styles.css --minify",
		"dev": "npm run build:css && wrangler dev",
		"dev:remote": "npm run build:css && wrangler dev --remote",
		"deploy": "npm run build:css && wrangler deploy",
		"seed": "curl -X POST http://localhost:8787/api/seed",
		"preview": "wrangler pages dev ./public"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.23",
		"postcss": "^8.5.6",
		"tailwindcss": "^3.4.19",
		"wrangler": "^4.56.0"
	}
}